@model Web_xemphim.Data.AdminsAccount

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Tên</label>
                    <div class="col-sm-9">
                        <label class="col-sm-3 col-form-label">@Model.Name</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Mật khẩu</label>
                    <div class="col-sm-9">
                        <label class="col-sm-3 col-form-label">@Model.Password</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Trạng thái</label>
                    <div class="col-sm-9">
                        <label class="col-sm-3 col-form-label">@Model.Checked</label>
                    </div>
                </div>

                <a asp-action="Edit" asp-route-id="@Model?.AdminId" class="btn btn-gradient-primary me-2">Edit</a>

                <a asp-action="Index" class="btn btn-light">Back to List</a>
            </form>
        </div>
    </div>
</div>