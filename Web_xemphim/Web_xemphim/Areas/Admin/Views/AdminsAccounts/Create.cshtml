@model Web_xemphim.Data.AdminsAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>AdminsAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checked" class="control-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Checked" id="tesst" hidden />

                    <label class="switch ">

                        <input type="checkbox" id="ckbox" checked>

                        <span class="slider round"></span>
                    </label>
                    <span asp-validation-for="Checked" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button class="btn btn-light" asp-action="Index">Back to List</button>

            </div>
        </form>
    </div>
</div>


@section script{

    <script type="text/javascript">

        const alertStatus = (e) => {
            if ($("#ckbox").is(":checked")) {
                // alert("Is checked");
                $("#ckbox").attr("checked", true);
                $('#tesst').val("True");

            } else {
                // alert("Is not checked");
                $("#ckbox").attr("checked", false);
                $('#tesst').val("false");
            }
        };

        // Attaching the click event on the button
        $(document).on("click", "#ckbox", alertStatus);

    </script>

}
